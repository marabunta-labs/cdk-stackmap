{
  "name": "cdk-stackmap",
  "displayName": "CDK StackMap",
  "description": "Visualize AWS CDK stacks instantly.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cdk-stackmap.visualize",
        "title": "CDK StackMap: Visualize Stack"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CDK StackMap",
      "properties": {
        "cdk-stackmap.showMinimap": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar el minimapa en la visualizaci√≥n de stacks."
        },
        "cdk-stackmap.nodeColorMode": {
          "type": "string",
          "enum": ["fill", "border"],
          "default": "fill",
          "description": "Modo de color para los nodos AWS: 'fill' colorea el relleno, 'border' colorea solo el borde."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
